<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.auth.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.auth.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true" >

        <activity
            android:name="com.auth.app.ui.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.auth.app.ui.ActionQuestion"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            />

        <service
            android:name="com.auth.app.services.AskJoweFirebaseMessagingService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.auth.app.services.QuestionService"
            android:exported="false">
        </service>
        <service android:name="com.auth.app.services.NotificationService"
            android:exported="false">

        </service>
    </application>

</manifest>